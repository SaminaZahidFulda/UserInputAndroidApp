<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/finger_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/list_item_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:text="FingerPrint Input" />

    <Button
    android:id="@+id/voice_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/list_item_text"
    android:layout_alignParentRight="true"
    android:layout_marginRight="0dp"
    android:text="Voice Recogniation Input" />

    <Button
        android:id="@+id/video_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/list_item_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:text="Capture Video Input" />

    <Button
        android:id="@+id/gesture_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/list_item_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:text="Gesture Input" />

    <Button
        android:id="@+id/loc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/list_item_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:text="User Location" />

</LinearLayout>
